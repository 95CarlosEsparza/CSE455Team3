<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightthemePrimary1">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="What is the point of this app?"
        android:textSize="15sp"
        android:textColor="@color/lightthemeText"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:text="What is the point of life?"
        android:textSize="15sp"
        android:textColor="@color/lightthemeText"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:text="ANSWERS COMING SOON..."
        android:textColor="@color/lightthemeAccent"
        android:textSize="10sp"
        android:textStyle="bold" />
</LinearLayout>
